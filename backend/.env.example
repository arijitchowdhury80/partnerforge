# =============================================================================
# PartnerForge Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# Railway will auto-provision DATABASE_URL and REDIS_URL

# =============================================================================
# Database (Railway provisions this automatically)
# =============================================================================
# For local dev with SQLite:
DATABASE_URL=sqlite+aiosqlite:///data/partnerforge.db

# For production PostgreSQL (Railway auto-provisions):
# DATABASE_URL=postgresql://user:pass@host:5432/railway

# =============================================================================
# Redis (optional - for Celery background tasks)
# =============================================================================
# Railway provisions this when you add Redis:
# REDIS_URL=redis://default:pass@host:6379

# =============================================================================
# API Keys (REQUIRED for enrichment)
# =============================================================================
# Get from: https://builtwith.com/api
BUILTWITH_API_KEY=your_builtwith_api_key_here

# Get from: https://www.similarweb.com/api
SIMILARWEB_API_KEY=your_similarweb_api_key_here

# Yahoo Finance (optional - for financial data)
YAHOO_FINANCE_API_KEY=

# =============================================================================
# Rate Limits (requests per minute)
# =============================================================================
BUILTWITH_RPM=30
SIMILARWEB_RPM=60
YAHOO_FINANCE_RPM=100
WEBSEARCH_RPM=300

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME=PartnerForge
APP_VERSION=2.0.0
DEBUG=false

# =============================================================================
# CORS Origins (comma-separated in Railway variables)
# =============================================================================
# Default includes localhost + Vercel deployment
# Add your production frontend URL here
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","https://partnerforge.vercel.app"]
