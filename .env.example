# PartnerForge Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# DATABASE
# =============================================================================

# PostgreSQL connection string (Supabase)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres

# Local SQLite database (for development/migration)
SQLITE_PATH=data/partnerforge.db

# =============================================================================
# CACHE (Redis)
# =============================================================================

# Redis connection string (Upstash)
# Format: redis://default:password@endpoint:port
REDIS_URL=redis://default:[PASSWORD]@[ENDPOINT].upstash.io:6379

# Cache TTL in seconds (default: 7 days)
CACHE_TTL=604800

# =============================================================================
# EXTERNAL APIs
# =============================================================================

# BuiltWith API
# Get key from: https://builtwith.com/api
BUILTWITH_API_KEY=your_builtwith_api_key_here

# SimilarWeb API
# Get key from: https://similarweb.com/api
SIMILARWEB_API_KEY=your_similarweb_api_key_here

# =============================================================================
# APPLICATION
# =============================================================================

# Environment: development, staging, production
ENVIRONMENT=development

# API port (Railway sets PORT automatically)
PORT=8000

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://partnerforge.vercel.app

# =============================================================================
# MONITORING (Optional)
# =============================================================================

# Sentry DSN for error tracking
# Get from: https://sentry.io
SENTRY_DSN=

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# =============================================================================
# SECURITY
# =============================================================================

# API key for authentication (generate with: openssl rand -hex 32)
API_SECRET_KEY=

# JWT secret for tokens (generate with: openssl rand -hex 64)
JWT_SECRET=

# =============================================================================
# RAILWAY (Set automatically by Railway)
# =============================================================================

# RAILWAY_ENVIRONMENT=production
# RAILWAY_SERVICE_NAME=partnerforge-api
# RAILWAY_PROJECT_ID=...

# =============================================================================
# DEVELOPMENT
# =============================================================================

# Enable hot reload
RELOAD=true

# Enable debug mode
DEBUG=true
